<Window x:Class="cbMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Message" 
        Width="440" 
        ResizeMode="NoResize" 
        SizeToContent="Height" 
        ShowInTaskbar="False" 
        WindowStartupLocation="CenterOwner"
        SnapsToDevicePixels="true"
        Background="#FF3A3A3A"
        Foreground="WhiteSmoke"
        FontFamily="Segoe UI"
        FontSize="11">

    <Window.Resources>
        
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
            <Setter Property="BorderBrush" Value="#FFC3C3C3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Padding" Value="26,5,26,5"/>
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="{TemplateBinding BorderBrush}" 
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="8"
                             Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsDefault" Value="True">
                    <Setter Property="Background" Value="#FF0078D4"/>
                    <Setter Property="BorderBrush" Value="#FFC3C3C3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>


    <Grid>

        <StackPanel Margin="30,20,30,25">

            <!-- Header with Icon and Title -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">

                <Border x:Name="IconBorder" Width="40" Height="40" Margin="0,0,16,0" CornerRadius="8" d:Background="#FF0078D4">
                    <TextBlock x:Name="IconText" d:Text="ℹ" FontSize="22" Foreground="white" d:Margin="0,-2,0,0" 
                      HorizontalAlignment="Center" VerticalAlignment="center" />
                </Border>

                <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="14" Foreground="WhiteSmoke" VerticalAlignment="Center" Text="Information"/>

            </StackPanel>
            
            <!-- Message Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300" Margin="55,0,0,24">
                <TextBlock x:Name="MessageText" TextWrapping="Wrap" Foreground="#FFE8E8E8" d:Text="This is a demo text."
                        FontSize="12" LineHeight="1.4" Margin="0,0,4,0" />
            </ScrollViewer>

            <!-- Separator -->
            <Border Height="1" Background="#FF555555" Margin="0,0,0,16"/>

            <!-- Button Panel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button x:Name="btnButton1" Content="OK" Margin="0,0,12,0" d:IsDefault="true" />
                <Button x:Name="btnButton2" Content="Cancel" Margin="0,0,12,0"/>
                <Button x:Name="btnButton3" Content="No"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</Window>
