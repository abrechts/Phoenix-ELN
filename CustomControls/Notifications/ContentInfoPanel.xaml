<UserControl x:Class="ContentInfoPanel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:CustomControls"
                xmlns:base="clr-namespace:ElnCoreModel;assembly=ElnCoreModel"
                d:DataContext="{d:DesignInstance Type=base:tblUsers}"
                mc:Ignorable="d" 
                d:DesignWidth="240">

    <Grid>
        <Border BorderBrush="gray" BorderThickness="1" CornerRadius="6" Padding="4,2,4,4">
            <local:StepSummary Margin="0,0,0,0" FontSize="11.5" />
        </Border>
    </Grid>

</UserControl>
