<UserControl x:Class="SketchArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls"
             mc:Ignorable="d">

    <Grid x:Name="sketchGrid" Background="white" Cursor="Hand" Height="160" MinWidth="632" Margin="0" >

        <Viewbox x:Name="sketchViewbox" StretchDirection="DownOnly"/>

        <TextBlock x:Name="blkClickInfo" Foreground="Gray" FontStyle="Oblique" Text="Click to edit reaction sketch ..." 
            TextAlignment="Center" FontFamily="Verdana" FontSize="10" Cursor="Hand" VerticalAlignment="Center"/>
        
    </Grid>

</UserControl>
