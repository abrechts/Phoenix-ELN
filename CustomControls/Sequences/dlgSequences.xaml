<Window x:Class="dlgSequences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControls"
        mc:Ignorable="d"
        Title="Connected Sequences" Height="550" Width="900" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" 
        TextOptions.TextFormattingMode="Display">

    <DockPanel  VerticalAlignment="top" Margin="16">
       
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="top" >
            <TextBlock Text="Synthetic Environment" FontWeight="bold" FontSize="16"/>
        </StackPanel>

        <Separator Margin="0,6,0,8" DockPanel.Dock="top"/>
        
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Margin="0,0,0,2" HorizontalScrollBarVisibility="Auto" MaxHeight="130">
            <Grid x:Name="pnlConnections" d:Width="300" d:Height="130" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollViewer>

        <Separator Margin="0,6,0,16" DockPanel.Dock="top"/>

        <ScrollViewer DockPanel.Dock="top" VerticalScrollBarVisibility="auto" MaxHeight="300" d:Height="200">
            <WrapPanel x:Name="pnlSeqStructures" HorizontalAlignment="Center"/>
        </ScrollViewer>


    </DockPanel>
</Window>
