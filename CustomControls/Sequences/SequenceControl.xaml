<UserControl x:Class="SequenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="140">
    
    <UserControl.Resources>

        <!-- FlowScheme button style -->
        <Style x:Key="FlowSchemeButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border 
                            x:Name="Border"  
                            BorderThickness="1"
                            CornerRadius="3,3,3,3"
                            Background="{StaticResource LightBlueGradient2}"
                            BorderBrush="DimGray">
                            <ContentPresenter 
                                     Name="MyPresenter"
                                      Margin="2"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource LightBlueGradient}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource OrangeGradient}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    
    <Grid Margin="0,4">

        <StackPanel Orientation="Horizontal">

            <!--vertical connector left-->
            <Grid HorizontalAlignment="right" d:Background="whitesmoke">
                <StackPanel x:Name="pnlUpstream" Margin="0,0,2,0" d:Width="100" VerticalAlignment="Center"/>
                <Canvas x:Name="canvOverlayLeft" IsHitTestVisible="False" >
                    <Polyline x:Name="VertPolylineLeft" Stroke="#FFC283FC" StrokeThickness="2"/>
                </Canvas>
            </Grid>

            <StackPanel x:Name="pnlMain" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,0,1" Orientation="Horizontal" >

                <!--upstream connector-->
                <StackPanel x:Name="upConnector" Orientation="Horizontal" Margin="0,0,1,0" VerticalAlignment="Center" 
                   d:Visibility="Visible" Visibility="collapsed">
                    <Rectangle x:Name="horizConnLeft" Fill="#FFC283FC" Width="12" Height="2" VerticalAlignment="Center" />
                    <TextBlock Text="&#10148;" FontSize="12" Foreground="#FFC283FC" VerticalAlignment="Center" Margin="-3,-2,0,0"/>
                </StackPanel>

                <!--sequence button-->
                <ToggleButton x:Name="btnMain" Style="{StaticResource FlowSchemeButton}" ToolTipService.ShowOnDisabled="True" MinWidth="110" FontSize="10" Padding="2,0" 
                   IsThreeState="False" MinHeight="22" FontFamily="Arial">
                    <TextBlock x:Name="blkMainTitle" d:Text="Sequence -1" TextTrimming="CharacterEllipsis" Margin="4,0,4,0" 
                        Foreground="#FF474747" FontWeight="DemiBold" FontSize="10.5" FontFamily="Arial"/>
                </ToggleButton>

                <!--downstream connector-->
                <Rectangle x:Name="downConnector" Fill="#FFC283FC" Width="12" Height="2" Margin="2,0,-1,0" 
                    d:Visibility="Visible" Visibility="collapsed"/>

            </StackPanel>

            <!--vertical connector right-->
            <Grid HorizontalAlignment="left" d:Background="WhiteSmoke">
                <StackPanel x:Name="pnlDownstream" d:Width="100" VerticalAlignment="Center"/>
                <!-- Canvas overlay for vertical connector lines  -->
                <Canvas x:Name="canvOverlayRight" IsHitTestVisible="False">
                    <Polyline x:Name="VertPolylineRight" Stroke="#FFC283FC" StrokeThickness="2"/>
                </Canvas>
            </Grid>

        </StackPanel>

    </Grid>
    
</UserControl>
