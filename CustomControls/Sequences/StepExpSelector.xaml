<UserControl x:Class="StepExpSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls" 
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase" 
             xmlns:system="http://schemas.microsoft.com/winfx/2009/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>

        <local:ExpEntryEnabledConverter x:Key="expEntryEnabledConv"/>

        <DataTemplate x:Key="expTreeItem">
            <local:ExpTreeHeader Margin="0,-1" IsTabIndicatorVisible="false" IsEnabled="{Binding Converter={StaticResource expEntryEnabledConv}}"/>
        </DataTemplate>

    </UserControl.Resources>
    
    <Grid>

        <ListBox x:Name="lstStepExperiments"
            SelectionMode="Single" Background="transparent" BorderThickness="0" FocusVisualStyle="{x:Null}"              
            Grid.IsSharedSizeScope="true" AllowDrop="false"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            VirtualizingStackPanel.IsVirtualizing="False" MinHeight="25"
            ItemTemplate="{StaticResource expTreeItem}">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <!--Disable unfinalized server experiments-->
                    <Setter Property="IsEnabled" Value="{Binding Converter={StaticResource expEntryEnabledConv}}" />
                    <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
                    <Setter Property="ToolTipService.InitialShowDelay" Value="1000" />
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.7"/>
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🚫" FontSize="12" Foreground="LightCoral" Margin="0,0,4,0" />
                                        <TextBlock Foreground="whitesmoke">
                                            Unfinalized server experiments are 
                                            <LineBreak/>
                                            inaccessible (work in progress).
                                        </TextBlock>
                                    </StackPanel>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>

    </Grid>
    
</UserControl>
