<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    
    <!--Dark mode Menu and MenuItem Styles-->
    <!--==================================-->


    <!--common dark mode background-->
    <SolidColorBrush x:Key="mnuDarkBackground" Color="#FF4F4F4F"/>


    <Style x:Key="DarkModeMenuStyle" TargetType="{x:Type MenuItem}">
        
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">

                    <Border x:Name="templateRoot"        
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3"
                        SnapsToDevicePixels="True">

                        <Grid>

                            <Grid x:Name="SubmenuPresenter">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="IconColumn" Width="Auto" SharedSizeGroup="MenuIcon"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter x:Name="Icon"
                                    ContentSource="Icon"
                                    MaxWidth="16" Height="16"
                                    Margin="4,2,2,2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>

                                <ContentPresenter x:Name="menuHeaderContainer"
                                    Grid.Column="2"
                                    ContentSource="Header"
                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                    Margin="6,3,6,3"
                                    RecognizesAccessKey="True"
                                    VerticalAlignment="Center"/>

                                <Path x:Name="rightArrow"
                                    Grid.Column="3"
                                    Data="M 0 0 L 4 3.5 L 0 7 Z"
                                    Fill="White"
                                    Margin="10,0,4,0"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"/>

                                <Path x:Name="downArrow"
                                      Grid.Column="3"
                                      Data="M 0 0 L 3 3 L 6 0 Z"
                                      VerticalAlignment="Center" 
                                      Margin="-2,2,4,0" 
                                      Fill="White" 
                                      Visibility="Collapsed"/>

                            </Grid>

                            <Popup x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}"
                                IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}">

                                <Border Background="#FF4F4F4F"
                                    BorderBrush="#FF6F6F6F"
                                    BorderThickness="1"
                                    Padding="4,2,4,4"
                                    Margin="0,0,8,8">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="5" BlurRadius="7" Color="Black" Opacity="0.45" />
                                    </Border.Effect>
                                    <ScrollViewer Style="{DynamicResource {ComponentResourceKey ResourceId=MenuScrollViewer, TypeInTargetAssembly={x:Type FrameworkElement}}}">
                                        <Grid RenderOptions.ClearTypeHint="Enabled">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle"
                                                KeyboardNavigation.TabNavigation="Cycle"
                                                Grid.IsSharedSizeScope="True"/>
                                        </Grid>
                                    </ScrollViewer>
                                </Border>

                            </Popup>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="Role" Value="TopLevelHeader">
                            <Setter Property="Padding" Value="7,2"/>
                            <Setter TargetName="Icon" Property="Margin" Value="2,2,-2,2"/>
                            <Setter TargetName="downArrow" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="PART_Popup" Property="Placement" Value="Bottom"/>
                        </Trigger>

                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter TargetName="rightArrow" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="PART_Popup" Property="Placement" Value="Right"/>
                            <Setter Property="Background" Value="{StaticResource mnuDarkBackground}"/>
                        </Trigger>

                        <Trigger Property="Icon" Value="{x:Null}">
                            <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IconColumn" Property="Width" Value="0"/>
                        </Trigger>

                        <Trigger Property="Role" Value="SubmenuItem">
                            <Setter Property="Background" Value="{StaticResource mnuDarkBackground}"/>
                            <Setter Property="Padding" Value="0,3"/>
                        </Trigger>

                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="templateRoot" Property="Background" Value="#FF5F5F5F"/>
                            <Setter TargetName="templateRoot" Property="BorderBrush" Value="LightSkyBlue"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Dark mode Separator Style for Menus -->
    <Style x:Key="DarkMenuSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Height" Value="7"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="{StaticResource mnuDarkBackground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="MenuIcon"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Separator line spans all columns -->
                        <Border Grid.ColumnSpan="4"
                                Height="1" 
                                Background="#FFA0A0A0"
                                Margin="8,0"
                                VerticalAlignment="Center"
                                SnapsToDevicePixels="True"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!-- Dark Mode ComboBox Style -->
    <!--==========================-->

    <!-- Color definitions -->

    <SolidColorBrush x:Key="cboForeground" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="cboBackground" Color="#FF4A4A4A"/>
    <SolidColorBrush x:Key="cboBorderBrush" Color="#FF8FC4F8"/>
    <SolidColorBrush x:Key="cboDropDownArrowBrush" Color="WhiteSmoke"/>
    
    <SolidColorBrush x:Key="cboItemHighlightForeground" Color="LightSkyBlue"/>
    <SolidColorBrush x:Key="cboItemHighlightBackground" Color="#FF444444"/>
    <SolidColorBrush x:Key="cboItemHighlightBorderBrush" Color="LightGray"/>

    <SolidColorBrush x:Key="cboItemSelectedForeground" Color="LightSkyBlue"/>
    <SolidColorBrush x:Key="cboItemSelectedBackground" Color="#FF222255"/>

    <SolidColorBrush x:Key="cboDropDownBackground" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="cboDropDownBorderBrush" Color="gray"/>


    <!-- ToggleButton Template for ComboBox (substyle) -->
    
    <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
        <Grid>
            <Border x:Name="Border" Background="{DynamicResource cboBackground}" BorderBrush="{DynamicResource cboBorderBrush}" BorderThickness="1" CornerRadius="6"/>
            <Path x:Name="Arrow" HorizontalAlignment="Right" Margin="0,0,8,0" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{DynamicResource cboDropDownArrowBrush}"/>
        </Grid>
    </ControlTemplate>
    

    <!-- *** Dark ComboBox Style *** -->

    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">

        <Setter Property="Foreground" Value="{DynamicResource cboForeground}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
      
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton Name="ToggleButton"
                                        Template="{StaticResource ComboBoxToggleButton}"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"/>
                        <ContentPresenter Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="8,4,22,5"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        <Popup Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True"
                                Focusable="False"
                                PopupAnimation="Slide">
                            <Grid Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200">
                                <Border x:Name="DropDownBorder"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource cboDropDownBorderBrush}"
                                            Background="{DynamicResource cboDropDownBackground}"/>
                                <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FF888888"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                    
                </ControlTemplate>
            </Setter.Value>
            
        </Setter>

        <Setter Property="ItemContainerStyle">
            
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{DynamicResource cboForeground}"/>
                    <Setter Property="Padding" Value="6,2"/>
                    <Setter Property="Margin" Value="6,1"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Bd"
                                        BorderThickness="1"
                                        Background="{TemplateBinding Background}" 
                                        Padding="4,3"
                                        CornerRadius="4"
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource cboItemHighlightBackground}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource cboItemHighlightForeground}"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource cboItemHighlightBorderBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource cboItemSelectedBackground}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource cboItemSelectedForeground}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FF888888"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
            
        </Setter>

    </Style>


    <!-- Dark Mode ScrollViewer Style -->
    <!--==============================-->

    
    <!-- ScrollBar Colors -->
    
    <SolidColorBrush x:Key="ScrollBarBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#FF686868"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundHover" Color="#FF909090"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackgroundDragging" Color="#FFB0B0B0"/>

   
    <!-- ScrollBar Style (sub-style) -->
    
    <Style x:Key="DarkScrollBarStyle" TargetType="{x:Type ScrollBar}">

        <!--Reduce width and height of scrollbars-->   
        <Style.Resources>
            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">12</sys:Double>
            <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">12</sys:Double>
        </Style.Resources>

        <Setter Property="Background" Value="{StaticResource ScrollBarBackground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">

                    <Grid x:Name="Bg" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsMouseOver}">
                            <Track.Thumb>

                                <Thumb>
                                    <Thumb.Style>
                                        <Style TargetType="{x:Type Thumb}">
                                            <Setter Property="Background" Value="{StaticResource ScrollBarThumbBackground}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                        <Rectangle Fill="{TemplateBinding Background}" RadiusX="3" RadiusY="3"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter Property="Background" Value="{StaticResource ScrollBarThumbBackgroundHover}"/>
                                                </Trigger>
                                                <Trigger Property="IsDragging" Value="true">
                                                    <Setter Property="Background" Value="{StaticResource ScrollBarThumbBackgroundDragging}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- *** Dark ScrollViewer Style *** -->

    <Style x:Key="DarkScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Content Presenter -->
                        <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>

                        <!-- Vertical ScrollBar -->
                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                Style="{StaticResource DarkScrollBarStyle}"
                                Grid.Column="1" Grid.Row="0"
                                Orientation="Vertical"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Value="{TemplateBinding VerticalOffset}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                        <!-- Horizontal ScrollBar -->
                        <ScrollBar x:Name="PART_HorizontalScrollBar"
                                Style="{StaticResource DarkScrollBarStyle}"
                                Grid.Column="0" Grid.Row="1"
                                Orientation="Horizontal"
                                Maximum="{TemplateBinding ScrollableWidth}"
                                ViewportSize="{TemplateBinding ViewportWidth}"
                                Value="{TemplateBinding HorizontalOffset}"
                                Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
