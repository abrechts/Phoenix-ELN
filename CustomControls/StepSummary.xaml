<UserControl x:Class="StepSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:base="clr-namespace:ElnCoreModel;assembly=ElnCoreModel"      
             d:DataContext="{d:DesignInstance Type=base:tblUsers}"
             mc:Ignorable="d" 
            d:DesignWidth="250">

    <UserControl.Resources>

        <CollectionViewSource x:Key="cvsStepExperiments" IsLiveSortingRequested="True" 
          Filter="cvsStepExperiments_Filter">
            <CollectionViewSource.SortDescriptions>
                <!--<componentModel:SortDescription PropertyName="Yield" Direction="Descending"/>-->
                <componentModel:SortDescription PropertyName="Scale" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.LiveSortingProperties>
                <system:String>Yield</system:String>
            </CollectionViewSource.LiveSortingProperties>
        </CollectionViewSource>

        <DataTemplate x:Key="expTreeItem">
            <local:ExpTreeHeader Margin="0,-1"/>
        </DataTemplate>

    </UserControl.Resources>

    <DockPanel Margin="0,4,0,4" >

        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="top" DockPanel.Dock="top" Margin="-4,0,0,0">
                <TextBlock Text="Same Step Reactions" FontWeight="Bold" FontSize="12.3" 
                    Foreground="#FF0941CC" Margin="0,0,4,3" FontStyle="Italic" />
                <ContentControl Content="{StaticResource icoInfo}" Height="12" Cursor="Hand" ToolTipService.InitialShowDelay="250" Opacity="0.9"
                    ToolTip="All experiments with identical reference reactant &#x0a;and product as the current experiment."/>
            </StackPanel>-->


        <!--Ref.Reactant-->
        <StackPanel DockPanel.Dock="Top" Margin="0,2,0,8">

            <Border CornerRadius="6" BorderBrush="gray" BorderThickness="1" Padding="8,0" HorizontalAlignment="Center" Background="#FF919191">
                <TextBlock Text="Reactant >" VerticalAlignment="Center" Foreground="white" Background="transparent" 
                        FontStyle="Italic" FontWeight="demibold" Padding="1,0" Margin="1,1,1,1" FontFamily="Verdana" FontSize="10"/>
            </Border>

            <Separator Margin="0,0,0,0"/>

            <StackPanel Margin="0,0,0,2" Background="whitesmoke">

                <StackPanel Orientation="Horizontal" Margin="6,3,0,0" >
                    <TextBlock Text="Elemental:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkReactEf" d:Text="C₁₇H₂₃NO"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0" >
                    <TextBlock Text="MW:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkReactMw" d:Text="234.75"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0" >
                    <TextBlock Text="Exact Mass:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkReactEM" d:Text="233.35"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0" >
                    <TextBlock Text="Web Info:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="lnkPubChemReact" Text="PubChem" Foreground="blue" TextDecorations="Underline"  Cursor="Hand" Margin="0,0,4,0"/>
                    <TextBlock Text="|"/>
                    <TextBlock x:Name="lnkChemSpiderReact" Text="ChemSpider" Foreground="blue" TextDecorations="Underline"  Cursor="Hand" Margin="4,0,40,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,6" >
                    <TextBlock HorizontalAlignment="Left" Text="InChIKey:" FontWeight="Demibold" VerticalAlignment="Center" Width="70"/>
                    <TextBox x:Name="blkInChIKeyReact" d:Text="CATMAVIUJSKTCV-UHFFFAOYSA-N" IsReadOnly="true" BorderThickness="0" 
                            Margin="-2,4,0,0" FontSize="11" VerticalAlignment="Center" FontFamily="Calibri" Background="transparent"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>

        <!--Ref.Product-->
        <StackPanel DockPanel.Dock="Top" >

            <Border CornerRadius="6" BorderBrush="gray" BorderThickness="1" Padding="8,0"  HorizontalAlignment="Center" 
              Background="#FF919191">
                <TextBlock Text="> Product" VerticalAlignment="Center" Foreground="white" FontFamily="Verdana" FontSize="10"
                   Background="transparent" FontStyle="Italic" FontWeight="demibold" Padding="1,0" Margin="1,1,1,1"/>
            </Border>

            <Separator Margin="0,0,0,2"/>

            <StackPanel Margin="0,0,0,2" Background="whitesmoke">

                <StackPanel Orientation="Horizontal" Margin="6,3,0,0" >
                    <TextBlock Text="Elemental:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkProdEf" d:Text="C₁₇H₂₃NO"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0" >
                    <TextBlock Text="MW:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkProdMw" d:Text="234.75"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0"  >
                    <TextBlock Text="Exact Mass:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="blkProdEM" d:Text="233.35"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,0"  >
                    <TextBlock Text="Web Info:" Width="70" FontWeight="DemiBold"/>
                    <TextBlock x:Name="lnkPubChemProd" Text="PubChem" Foreground="blue" TextDecorations="Underline"  Cursor="Hand" Margin="0,0,4,0"/>
                    <TextBlock Text="|"/>
                    <TextBlock x:Name="lnkChemSpiderProd" Text="ChemSpider" Foreground="blue" TextDecorations="Underline"  Cursor="Hand" Margin="4,0,40,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="6,0,0,6">
                    <TextBlock HorizontalAlignment="Left" Text="InChIKey:" FontWeight="Demibold" VerticalAlignment="Center" Width="70"/>
                    <TextBox x:Name="blkInChIKeyProd" d:Text="CATMAVIUJSKTCV-UHFFFAOYSA-N" IsReadOnly="true" BorderThickness="0" 
                            Margin="-2,3,0,0" FontSize="11" VerticalAlignment="Center" FontFamily="Calibri" Background="transparent"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>


        <DockPanel Margin="0,10,0,0" >

            <Border CornerRadius="6" BorderBrush="gray" BorderThickness="1" Padding="8,0"  HorizontalAlignment="Center" DockPanel.Dock="top"
                    Background="#FF919191">
                <TextBlock Text="Same Step" VerticalAlignment="Center" Foreground="white" FontFamily="Verdana" FontSize="10"
                        Background="transparent" FontStyle="Italic" FontWeight="demibold" Padding="1,0" Margin="1,1,1,1"/>
            </Border>

            <DockPanel Background="WhiteSmoke" DockPanel.Dock="top">

                <Separator Margin="0,0,0,2" DockPanel.Dock="top"/>

                <local:ComboPlus x:Name="cboSortType" SelectedIndex="0" HorizontalAlignment="Center" Margin="0,4,0,0" Padding="6,1,6,2" 
                        CboBackground="white" VerticalAlignment="Center" DockPanel.Dock="top" FontSize="11.5">
                    <ComboBoxItem Content="by yield"/>
                    <ComboBoxItem Content="by scale"/>
                </local:ComboPlus>

                <Grid>

                    <TextBlock Text="no items present so far ..." Foreground="#FF6C6C6C" Margin="0,2,0,0" VerticalAlignment="Top" 
                                HorizontalAlignment="Center"/>

                    <ListBox x:Name="lstStepExperiments"
                                SelectionMode="Single" Background="transparent" BorderThickness="0" FocusVisualStyle="{x:Null}"              
                                Grid.IsSharedSizeScope="true" AllowDrop="false" Margin="12,2,2,2"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                VirtualizingStackPanel.IsVirtualizing="False" MinHeight="25"
                                ItemsSource="{Binding Source={StaticResource cvsStepExperiments}}"
                                ItemTemplate="{StaticResource expTreeItem}" >
                    </ListBox>

                </Grid>

            </DockPanel>

            <Separator Margin="0,0,0,2" VerticalAlignment="Top"/>

        </DockPanel>

    </DockPanel>

</UserControl>
