<Window x:Class="dlgCrashReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phoenix ELN System Error" Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Sorry, a system error occurred!" FontSize="14" FontWeight="DemiBold" Foreground="blue" />
            <TextBlock Grid.Row="0" Margin="0,4,40,10" TextWrapping="Wrap"
                Text="You may copy the error report below for further investigation. The application will quit next."/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="lightskyblue" BorderThickness="1" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="6">
                <TextBox x:Name="txtErrLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                   BorderThickness="0"/>
            </ScrollViewer>
        </Border>

        <Button x:Name="btnQuit" Grid.Row="2" Content="Quit" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0" />
        
    </Grid>
    
</Window>
